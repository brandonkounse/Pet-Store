<h1>Store Order Page</h1>

<div>
  <h2>Pet Info</h2>

  <table>
    <th>Name</th>
    <th>Species</th>
    <th>Age</th>
    <th>Price</th>
      <tr>
        <td><%= @pet.name %></td>
        <td><%= @pet.species %></td>
        <td><%= @pet.age %></td>
        <td>$<%= @pet.price %></td>
      </tr>
  </table><br />
  <div class="box">
    <div class="pet-image-container"><%= image_tag(pet_image_path(@pet), alt: 'Pet Image', class: 'pet-image') %></div>
  </div>
</div>

<%= form_with model: @order, url: orders_path, method: :post do |form| %>
  <%= form.label :user_email, 'Email ' %>
  <%= form.text_field :user_email, placeholder: 'user@example.com' %>

  <% form.label :order_details %>
  <%= form.hidden_field :order_details, value: @pet.to_json %>

  <% form.label :total_cost %>
  <%= form.hidden_field :total_cost, value: @pet.price.to_d %>

  <%= form.submit 'Order' %>
<% end %>
